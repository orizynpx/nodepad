<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.github.orizynpx.nodepad.ui.controller.InventoryController"
      style="-fx-background-color: #1e1e1e; -fx-padding: 20;" spacing="20">

    <Label text="SKILL LIBRARY" style="-fx-text-fill: #00ffff; -fx-font-size: 28; -fx-font-weight: bold;"/>

    <ScrollPane fx:id="scrollPane" style="-fx-background: transparent; -fx-background-color: transparent;" fitToWidth="true">
        <content>
            <TilePane fx:id="tilePane" hgap="20" vgap="20" style="-fx-background-color: #1e1e1e;"/>
        </content>
    </ScrollPane>

</VBox>