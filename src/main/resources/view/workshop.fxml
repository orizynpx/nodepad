<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.StackPane?>

<!-- Root StackPane fills the parent -->
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="io.github.orizynpx.nodepad.controller.WorkshopController"
           fx:id="editorGraphContainer">

    <SplitPane dividerPositions="0.4" style="-fx-background-color: #1e1e1e;">

        <!-- Left: Code Editor (Give it a min width so it doesn't disappear) -->
        <StackPane fx:id="editorContainer" minWidth="200" style="-fx-background-color: #1e1e1e;" />

        <!-- Right: SmartGraph (Give it a min width) -->
        <StackPane fx:id="graphContainer" minWidth="200" style="-fx-background-color: #252525;" />

    </SplitPane>
</StackPane>